le => {\n            this.text = module.title;\n          });\n        } else {\n          this.text = this.textArray[this.slideNum];\n        }\n      }\n    },\n    gameType: {\n      handler() {\n        if (this.gameType != null && this.gameType < 5) {\n          // a game but not a test\n          import(`@/json/games/gamesInfo`).then(module => {\n            this.text = module[this.gameType - 1].title;\n          });\n        } else {\n          this.text = this.textArray[this.slideNum];\n        }\n      }\n    },\n    bigNavi: {\n      handler() {\n        this.bigNavi ? this.maxTop() : this.miniTop();\n      }\n    }\n  }\n});","map":{"version":3,"names":["defineComponent","IonImg","IonText","mapState","mapActions","name","components","props","data","bhdlogoSrc","require","stepLogoSrc","searchSrc","arrowSrc","text","showHeading","textArray","icon","computed","methods","miniTop","$refs","container","style","height","circle","borderRadius","maxTop","created","unwatch","$watch","setTimeout","watch","slideNum","handler","learnChapter","then","module","title","gameType","bigNavi"],"sources":["C:\\Users\\ellas\\OneDrive\\Documents\\Step-To-BHD1\\src\\components\\home\\base\\HomeTopLogo.vue"],"sourcesContent":["<template>\r\n  <div class=\"container\" ref=\"container\">\r\n    <transition-group appear name=\"fadeA\">\r\n      <div class=\"circle\" ref=\"circle\" :key=\"0\" v-if=\"firstOpened\"></div>\r\n\r\n      <ion-img\r\n        :src=\"stepLogoSrc\"\r\n        alt=\"step-logo\"\r\n        class=\"step-logo\"\r\n        v-if=\"firstOpened\"\r\n        :key=\"1\"\r\n      ></ion-img>\r\n\r\n      <ion-img\r\n        :src=\"bhdlogoSrc\"\r\n        alt=\"bhd-logo\"\r\n        class=\"bhd-logo\"\r\n        v-if=\"firstOpened\"\r\n        :key=\"2\"\r\n      ></ion-img>\r\n\r\n      <ion-text\r\n        :key=\"3\"\r\n        ref=\"num\"\r\n        :class=\"[\r\n          learnChapter != null && learnSubSec == null\r\n            ? ''\r\n            : 'hide no-transi